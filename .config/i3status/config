# i4status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	output_format = "none"

}


# order += "ipv6"
order += "wireless _first_"
#order += "ethernet _first_"
#order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
#order += "volume master"
order += "battery all"
order += "tztime local"
#order += "exec custom_brightness"

wireless _first_ {
        format_up = ""
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
	format_percentage = "%.00f%s"
	low_threshold = 30
	threshold_type = time
}
#🔋

disk "/" {
        format = "%avail"
}
cpu_usage {
	format = " %usage"
  #max_threshold = "85"
}

load {
        format = " "
	separator = false
}

memory {
        threshold_degraded = "1G"
        format_degraded = "%percentage_used"
	format = "%percentage_used"
  decimals = "0"
}
# 󰃭 %d-%m-%Y
tztime local {
        format = " %H:%M 󰣇 "
    separator = true
}
#🕒♪
volume master {
        format = "󰕾 %volume"
        format_muted = "󰝟 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
	min_width = 15
}
